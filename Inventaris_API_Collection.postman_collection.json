        },
        {
          "name": "Verify Reset Token",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/auth/verify-reset-token/:token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-reset-token", ":token"],
              "variable": [
                {
                  "key": "token",
                  "value": "reset-token-here"
                }
              ]
            }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"reset-token-here\",\n  \"newPassword\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/reset-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "reset-password"]
            }
          }
        },
        {
          "name": "Admin Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"

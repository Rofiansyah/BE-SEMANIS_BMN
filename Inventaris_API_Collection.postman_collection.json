            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"nama\": \"New User\",\n  \"nomorhp\": \"081234567891\",\n  \"password\": \"password123\",\n  \"role\": \"USER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/admin/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "admin", "register"]
            }
          }
        }
